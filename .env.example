# ===========================================
# ОСНОВНЫЕ НАСТРОЙКИ
# ===========================================

# Токен Telegram бота (обязательный)
BOT_TOKEN=your_bot_token_here

# ID чата для уведомлений (обязательный)
CHAT_ID=your_chat_id_here

# ===========================================
# НАСТРОЙКИ МОНИТОРИНГА
# ===========================================

# Интервал проверки парковки в минутах (по умолчанию: 1)
INTERVAL_MIN=1

# Первое уведомление без звука (true/false, по умолчанию: false)
INITIAL_SILENT=false

# ===========================================
# НАСТРОЙКИ API
# ===========================================

# URL API для получения данных о парковке
API_URL=https://sibakademstroy.brusnika.ru/api/parking_spaces/?building=286&floor=-2&limit=300

# Таймаут запроса к API в миллисекундах (по умолчанию: 10000)
API_TIMEOUT=10000

# Количество попыток повтора при ошибке (по умолчанию: 3)
API_RETRY_ATTEMPTS=3

# Задержка между повторами в миллисекундах (по умолчанию: 1000)
API_RETRY_DELAY=1000

# ===========================================
# НАСТРОЙКИ БАЗЫ ДАННЫХ
# ===========================================

# Путь к файлу базы данных (по умолчанию: ./data/parking.db)
DB_PATH=./data/parking.db

# ===========================================
# ШАБЛОНЫ СООБЩЕНИЙ (опционально)
# ===========================================

# Шаблон основного сообщения
# MESSAGE_TEMPLATE={{header}} — {{timestamp}}\nВсего мест: {{total}}\nСвободно: {{available}}\nНомера: {{numbers}}\n{{my_spot_status}}

# Шаблон уведомления о занятом месте
# ALERT_TEMPLATE=⚠️ <b>ВНИМАНИЕ!</b> Ваше парковочное место <code>{{spot_number}}</code> сейчас занято!
