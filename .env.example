# ===========================================
# Parking Watcher - Конфигурация
# ===========================================

# ОБЯЗАТЕЛЬНЫЕ ПЕРЕМЕННЫЕ
# ===========================================

# Токен Telegram бота (получить у @BotFather)
BOT_TOKEN=your_bot_token_here

# ID чата для уведомлений (можно узнать у @userinfobot)
CHAT_ID=your_chat_id_here

# ===========================================
# НАСТРОЙКИ МОНИТОРИНГА
# ===========================================

# Интервал проверки парковки в секундах (по умолчанию: 60)
INTERVAL_SEC=60

# Тихий первый запуск (true/false, по умолчанию: true)
INITIAL_SILENT=true

# ===========================================
# НАСТРОЙКИ API
# ===========================================

# URL API парковки (по умолчанию: API Брусники)
API_URL=https://sibakademstroy.brusnika.ru/api/parking_spaces/?building=286&floor=-2&limit=300

# Таймаут запросов к API в миллисекундах (по умолчанию: 10000)
API_TIMEOUT=10000

# Количество попыток повтора при ошибке API (по умолчанию: 3)
API_RETRY_ATTEMPTS=3

# Задержка между попытками в миллисекундах (по умолчанию: 1000)
API_RETRY_DELAY=1000

# ===========================================
# НАСТРОЙКИ TELEGRAM
# ===========================================

# Интервал проверки обновлений Telegram в миллисекундах (по умолчанию: 5000)
TELEGRAM_UPDATE_INTERVAL=5000

# ===========================================
# НАСТРОЙКИ БАЗЫ ДАННЫХ
# ===========================================

# Путь к файлу базы данных (по умолчанию: ./data/parking.db)
DB_PATH=./data/parking.db

# Интервал резервного копирования в миллисекундах (по умолчанию: 86400000 = 24 часа)
DB_BACKUP_INTERVAL=86400000

# ===========================================
# НАСТРОЙКИ ЛОГИРОВАНИЯ
# ===========================================

# Уровень логирования (error, warn, info, debug, по умолчанию: info)
LOG_LEVEL=info

# Формат логов (json, simple, по умолчанию: json)
LOG_FORMAT=json

# Файл для логов (по умолчанию: ./logs/app.log)
LOG_FILE=./logs/app.log

# ===========================================
# НАСТРОЙКИ КОНТЕЙНЕРА
# ===========================================

# Интервал проверки здоровья в миллисекундах (по умолчанию: 30000)
HEALTH_CHECK_INTERVAL=30000

# Таймаут graceful shutdown в миллисекундах (по умолчанию: 10000)
GRACEFUL_SHUTDOWN_TIMEOUT=10000

# ===========================================
# ШАБЛОНЫ СООБЩЕНИЙ (опционально)
# ===========================================

# Шаблон основного сообщения (можно использовать переменные: {{header}}, {{timestamp}}, {{total}}, {{available}}, {{numbers}}, {{my_spot_status}})
# MESSAGE_TEMPLATE={{header}} — {{timestamp}}\nВсего мест: {{total}}\nСвободно: {{available}}\nНомера: {{numbers}}\n{{my_spot_status}}

# Шаблон уведомления о занятости места (можно использовать переменную: {{spot_number}})
# ALERT_TEMPLATE=⚠️ <b>ВНИМАНИЕ!</b> Ваше парковочное место <code>{{spot_number}}</code> сейчас занято!